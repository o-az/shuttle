{
  "imports": {
    "#/": "./src/"
  },
  "tasks": {
    "dev": "deno run --unstable --allow-all --watch ./src/index.ts",
    "lint": "deno lint --unstable . src",
    "fmt": "deno fmt --unstable . src",
    "typecheck": "deno check *.ts src/**/*.ts",
    "deploy": "/bin/bash ./scripts/deploy.sh"
  },
  "lint": {
    "rules": {
      "exclude": ["ban-types"]
    },
    "include": ["./*.ts", "./src/**/*.ts"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": false,
    "proseWrap": "never"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "deno.window",
      "deno.unstable",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "noUncheckedIndexedAccess": true,
    "strictPropertyInitialization": true
  },
  "exclude": ["./dist", "./data.sqid", "*.db", "*.sqlite", ".github", ".vscode", "_"]
}
